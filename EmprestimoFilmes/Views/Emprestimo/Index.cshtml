@model IEnumerable<EmprestimosModel>

    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-5">
            <h1>Aluguel de filmes</h1>
            <a class="btn btn-success mx-2" asp-controller="Emprestimo" asp-action="Cadastrar">Cadastar novo aluguel</a>
        </div>

    @if(TempData["MensagemSucesso"]!=null)
    {
        <div class="alert alert-success text-dark" role="alert">
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger text-dark" role="alert">
            @TempData["MensagemErro"]
        </div>
    }

   <table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th scope="col">Cliente</th>
            <th scope="col">Filme</th>
            <th scope="col">Preço</th>
            <th scope="col">Data do Aluguel</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var emprestimo in Model)
            {
                <tr class="table-primary">
                    <td>@emprestimo.NomeCliente</td>
                    <td>@emprestimo.NomeFilmeEmprestimo</td>
                    <td>@emprestimo.Preco</td>
                    <td>@emprestimo.DataEmprestimo</td>
                    <td>
                        <a class="btn btn-warning w-10" asp-controller="Emprestimo" asp-action="Editar" asp-route-id=@emprestimo.Id>Editar</a>
                        <a class="btn btn-danger w-10" asp-controller="Emprestimo" asp-action="Excluir" asp-route-id=@emprestimo.Id>Excluir</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

</div>
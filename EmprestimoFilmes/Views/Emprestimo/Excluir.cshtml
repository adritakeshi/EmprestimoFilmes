@model EmprestimosModel

<div class="container bg-dark p-5 rounded-5">

    <div class="mb-5 text-center text-light">
        <h1>Exclusão de Aluguel de Filme</h1>
    </div>

    <form method="post" asp-controller="Emprestimo" asp-action="Excluir">
        <div class="mb-3 text-center text-light">
            <h2>Tem certeza que deseja excluir o registro abaixo?</h2>
        </div>/
        <div class="mb-3">
            <label for="NomeCliente" class="form-label text-light">Nome do Cliente</label>
            <input type="text" class="form-control" asp-for="NomeCliente" disabled id="NomeCliente" placeholder="Nome da pessoa que está alugando o filme">
        </div>

        <div class="mb-3">
            <label for="NomeFilmeEmprestimo" class="form-label text-light">Nome do Filme</label>
            <input type="text" class="form-control" asp-for="NomeFilmeEmprestimo" disabled id="NomeFilmeEmprestimo" placeholder="Filme que está sendo alugado">
        </div>

        <div class="mb-3">
            <label for="Preco" class="form-label text-light">Preço</label>
            <input type="text" class="form-control" asp-for="Preco" id="Preco" disabled placeholder="Preço do aluguel do filme">
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-danger w-50">Excluir</button>
            <a class="btn btn-primary w-50" asp-controller="Emprestimo" asp-action="Index">Voltar</a>
        </div>

    </form>

</div>